@* <!-- Views/Requisition/PendingApprovals.cshtml -->
@model List<PendingApprovalViewModel>
@{
    ViewData["Title"] = "Pending Approvals";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pending Approvals</h3>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Requisition #</th>
                                        <th>Date</th>
                                        <th>Requested By</th>
                                        <th>Department</th>
                                        <th>Purpose</th>
                                        <th>Type</th>
                                        <th>Approval Level</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.RequisitionNumber</td>
                                            <td>@item.RequestDate.ToString("dd/MM/yyyy")</td>
                                            <td>@item.RequestedBy</td>
                                            <td>@item.Department</td>
                                            <td>@item.Purpose</td>
                                            <td>
                                                <span class="badge bg-@(item.Type == RequisitionType.Urgent ? "warning" : "info")">
                                                    @item.Type
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">
                                                    Level @item.Level (@item.ApproverRole)
                                                </span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Approve", new { id = item.RequisitionId })" class="btn btn-sm btn-success">Review & Approve</a>
                                                <a href="@Url.Action("Details", new { id = item.RequisitionId })" class="btn btn-sm btn-outline-primary">View Details</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                            <h4>All Caught Up!</h4>
                            <p class="text-muted">There are no pending approvals at this time.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> *@